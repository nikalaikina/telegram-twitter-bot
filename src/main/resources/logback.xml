<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} %-5level [%class{1}:%L %method] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="finest">
        <appender-ref ref="console"/>
    </root>

</configuration>
